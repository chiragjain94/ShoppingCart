{% extends './partials/base.twig' %}
{% block content %}
  <div class="col-md-12 py-4">
    <div class="form-control">
      <label>Name</label>
      <h3>{{ product.name }}</h2>
    </div>

    <div class="form-control">
      <label>Image</label><br>
      <img class="img-fluid pt-2" height="200" src="../img/{{ product.image }}" width="200">
    </div>

    <div class="form-control">
      <label>Description</label>
      <h5 class="pt-2">{{ product.description }}</h5>
    </div>

    <div class="form-control">
      <label>Price</label>
      <h5 class="pt-2">Rs.
        {{ product.price }}/-</h5>
    </div>

    <a class="btn btn-primary my-2" href="editProduct.php?id= {{ product.id }}" type="button">
      Edit</a>

    <form action="product.php" method="POST">
      <input type="hidden" name="delete_id" value="{{ product.id }}">
      <input class="btn btn-danger" name="delete" type="submit" value="Delete">
    </form>

  </div>
{% endblock %}
